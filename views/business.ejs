<div class="container">
	<div class ="row" style="margin-top: 20px;">
		<div class="col-xs-5 col-sm-4 col-md-3 col-lg-2">
			<a href="/add-business" class="btn btn-success btn-lg btn-block">新增客户</a>
		</div>
	</div>
	<div style="margin-top: 30px;">
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" id="myTabs" role="tablist">
			<li role="presentation"  class="active">
				<a href="#myCustomers" role="tab" data-toggle="tab">我的客户</a>
			</li>
			<li role="presentation" ng-show="session.role == 'channel-mgr'">
				<a href="#myChannels" role="tab" data-toggle="tab">我的渠道</a>
			</li>
			<li role="presentation" ng-show="session.role == 'channel-mgr' || session.role == 'channel'">
				<a href="#myMembers" role="tab" data-toggle="tab">我的会员</a>
			</li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane fade in active" id="myCustomers">
				<table class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th width="10%">姓名</th>
							<th width="10%">联系电话</th>
							<th width="10%">贷款金额</th>
							<th width="15%">申请时间</th>
							<th width="10%">状态</th>
							<th width="10%"></th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="customer in customerList">
							<td ng-bind="customer.name"></td>
							<td ng-bind="customer.phone"></td>
							<td ng-bind="customer.apply_amount"></td>
							<td ng-bind="customer.createDate"></td>
							<td ng-bind="customer.status"></td>
							<td align="center">
								<a href="#" ng-click="onEditCustomer(customer)">编辑</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>

			<div role="tabpanel" class="tab-pane fade in" id="myChannels">
				<table class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th width="10%">姓名</th>
							<th width="10%">联系电话</th>
							<th width="15%">注册时间</th>
							<th width="10%">今日业绩</th>
							<th width="10%">历史业绩</th>
							<th width="10%"></th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="channel in channelList">
							<td ng-bind="channel.true_name"></td>
							<td ng-bind="channel.phone"></td>
							<td ng-bind="channel.createDate"></td>
							<td ng-bind="channel.today_customers"></td>
							<td ng-bind="channel.total_customers"></td>
							<td align="center">
								<a href="/customers?id={{channel.id}}">查看客户</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>

			<div role="tabpanel" class="tab-pane fade in" id="myMembers">
				<table class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th width="10%">会员姓名</th>
							<th width="10%">联系电话</th>
							<th width="15%">注册时间</th>
							<th width="10%">今日业绩</th>
							<th width="10%">历史业绩</th>
							<th width="10%"></th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="member in memberList">
							<td ng-bind="member.true_name"></td>
							<td ng-bind="member.phone"></td>
							<td ng-bind="member.createDate"></td>
							<td ng-bind="member.today_customers"></td>
							<td ng-bind="member.total_customers"></td>
							<td align="center">
								<a href="/customers?id={{member.id}}">查看客户</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="editDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">X</span>
				</button>
				<h4 class="modal-title" id="myModalLabel">编辑客户</h4>
			</div>
			<div class="modal-body">
				<form name='editForm' role="form" class="form-horizontal" ng-submit="onLogin()">
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">姓名</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="name" title="请输入姓名" required="" maxlength="20" ng-model="editCustomer.name" />
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">电话号码</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="phone" placeholder="新增" title="请输入新电话号码" required="" maxlength="20" ng-model="editCustomer.newPhone"
							ng-pattern="/^\d+$/" />
							<div ng-show="editForm.phone.$dirty &amp;&amp; editForm.phone.$invalid">
								<small class="alert-danger well-sm" ng-show="editForm.phone.$error.pattern">请使用数字</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">贷款金额</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="amount" title="请输入贷款金额" required="" maxlength="20" ng-model="editCustomer.amount"
							ng-pattern="/^\d+$/" />
							<div ng-show="editForm.amount.$dirty &amp;&amp; editForm.amount.$invalid">
								<small class="alert-danger well-sm" ng-show="editForm.amount.$error.pattern">请使用数字</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">状态</lable>
						<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
							<select class="form-control" ng-options="status.value for status in statusOptions" ng-model="editCustomer.status"></select>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<button type="button" class="btn btn-success btn-lg btn-block" data-dismiss="modal">保存</button>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<button type="button" class="btn btn-warning btn-lg btn-block" data-dismiss="modal">取消</button>
				</div>
			</div>
		</div>
	</div>
</div>