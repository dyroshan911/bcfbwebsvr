<div class="container">
	<div class="panel panel-default" ng-repeat="member in memberList">
		<div class="panel-heading" ng-click="member.showDetails = !member.showDetails;">
			<div class="row">
				<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6" ng-bind="member.true_name"></h3>
				<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6">点击查看/隐藏详情</h3>
			</div>
		</div>
		<div class="panel-body" ng-show="customer.showDetails">
			<form class="form-horizontal">
				<div class="form-group">
					<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">联系电话</lable>
					<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
						<input type="text" class="form-control" ng-model="member.phone" readonly="" />
					</div>
				</div>
				<div class="form-group">
					<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">电子邮箱</lable>
					<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
						<input type="text" class="form-control" ng-model="member.email" readonly="" />
					</div>
				</div>
				<div class="form-group">
					<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">注册时间</lable>
					<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
						<input type="text" class="form-control" ng-model="member.createDate" readonly="" />
					</div>
				</div>
				<div class="form-group">
					<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">今日业绩</lable>
					<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
						<input type="text" class="form-control" ng-model="member.today_customers" readonly="" />
					</div>
				</div>
				<div class="form-group">
					<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">历史业绩</lable>
					<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
						<input type="text" class="form-control" ng-model="member.total_customers" readonly="" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
						<a class="btn btn-info btn-lg btn-block" href="/wechat-customers?id={{member.id}}">查看客户</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>