<div class="container">
	<br/>
	<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
		<div class="panel panel-default">
			<div class="panel-body">
				<form name='accountForm' role="form" class="form-horizontal" ng-submit="onSave()">
					<div class="form-group">
						<h2 style="text-align: center;">个人信息</h2>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">账号</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" readonly="" ng-model="accountData.userName" />
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">姓名</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="name" title="请输入姓名" required="" maxlength="20" ng-model="accountData.name" />
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">电话号码</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="phone" placeholder="电话号码" title="请输入新电话号码" required="" maxlength="20" ng-model="accountData.phone"
							ng-pattern="/^\d+$/" />
							<div ng-show="accountForm.phone.$dirty &amp;&amp; accountForm.phone.$invalid">
								<small class="alert-danger well-sm" ng-show="accountForm.phone.$error.pattern">请使用数字</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">密码</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="password" class="form-control" name="password" placeholder="不修改时无需输入" title="请输入密码" maxlength="20" ng-model="accountData.password"
							ng-minlength="6" ng-change="onCheckPassword()" />
							<div ng-show="accountForm.password.$dirty &amp;&amp; accountForm.password.$invalid">
								<small class="alert-danger well-sm" ng-show="accountForm.password.$error.minlength">最小长度为6个字符</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">确认密码</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="password" class="form-control" name="passwordConfirm" placeholder="确认密码" title="请确认密码" maxlength="20" ng-model="accountData.passwordConfirm"
							ng-change="onCheckPassword()" />
							<div ng-show="accountForm.passwordConfirm.$dirty &amp;&amp; (accountData.passwordConfirm.length &gt; 0)">
								<small class="alert-danger well-sm" ng-show="!accountData.checkPassword">请确认两次输入的密码一致</small>
							</div>
						</div>
					</div>
					<br/>
					<div class="form-group">
						<div class="col-xs-4 col-xs-offset-1 col-sm-4 col-sm-offset-1 col-md-4 col-md-offset-1 col-lg-4 col-lg-offset-1">
							<button type="submit" class="btn btn-success btn-lg btn-block">保存</button>
						</div>
						<div class="col-xs-4 col-xs-offset-2 col-sm-4 col-sm-offset-2 col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
							<button type="button" class="btn btn-warning btn-lg btn-block" ng-click="onCancel()">取消</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="completeDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">X</span>
				</button>
				<h3 class="modal-title" id="myModalLabel">完善账号信息</h3>
			</div>
			<div class="modal-body">
				<form name='completeForm' role="form" class="form-horizontal" ng-submit="onComplete()">
					<div class="form-group">
						<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
							<input type="text" class="form-control" name="userName" placeholder="用户名" title="请输入用户名" required="" maxlength="20" ng-model="completeData.userName"
							ng-minlength="6" ng-pattern="/^\w+$/" />
							<div ng-show="completeForm.userName.$dirty &amp;&amp; completeForm.userName.$invalid">
								<small class="alert-danger well-sm" ng-show="completeForm.userName.$error.pattern">请使用字母，数字或者下划线</small>
								<small class="alert-danger well-sm" ng-show="completeForm.userName.$error.minlength &amp;&amp; !completeForm.userName.$error.pattern">最小长度为6个字符</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
							<input type="password" class="form-control" name="password" placeholder="密码" title="请输入密码" required="" maxlength="20" ng-model="completeData.password" />
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
							<button class="btn btn-success btn-lg btn-block" type="submit">确定</button>
						</div>
						<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
							<button type="button" class="btn btn-warning btn-lg btn-block" data-dismiss="modal">取消</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>