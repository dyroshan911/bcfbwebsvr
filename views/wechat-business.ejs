<div class="container-wechat">
	<div class ="row" style="margin-top: 20px;">
		<div class="col-xs-5 col-sm-4 col-md-3 col-lg-2">
			<a href="/add-business" class="btn btn-success btn-lg btn-block">新增客户</a>
		</div>
	</div>
	<div style="margin-top: 30px;">
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" id="myTabs" role="tablist">
			<li role="presentation"  class="active">
				<a href="#myCustomers" role="tab" data-toggle="tab">我的客户</a>
			</li>
			<li role="presentation">
				<a href="#myChannels" role="tab" data-toggle="tab">我的渠道</a>
			</li>
			<li role="presentation">
				<a href="#myMembers" role="tab" data-toggle="tab">我的会员</a>
			</li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane fade in active" id="myCustomers">
				<div class="panel panel-default" ng-repeat="customer in customerList">
					<div class="panel-heading" ng-click="customer.showDetails = !customer.showDetails;">
						<div class="row">
							<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6" ng-bind="customer.name"></h3>
							<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6">点击查看/隐藏详情</h3>
						</div>
					</div>
					<div class="panel-body" ng-show="customer.showDetails">
						<form class="form-horizontal">
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">联系电话</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<div class="panel panel-success">
										<div class="panel-heading" ng-bind="customer.phone"></div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">贷款金额</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<div class="panel panel-success">
										<div class="panel-heading" ng-bind="customer.apply_amount"></div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">申请时间</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<div class="panel panel-success">
										<div class="panel-heading" ng-bind="customer.createDate"></div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">状态</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<div class="panel panel-success">
										<div class="panel-heading" ng-bind="customer.status"></div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>

			<div role="tabpanel" class="tab-pane fade in" id="myChannels">
				<div class="panel panel-default" ng-repeat="channel in channelList">
					<div class="panel-heading" ng-click="channel.showDetails = !channel.showDetails;">
						<div class="row">
							<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6" ng-bind="channel.name"></h3>
							<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6">点击查看/隐藏详情</h3>
						</div>
					</div>
					<div class="panel-body" ng-show="customer.showDetails">
						<form class="form-horizontal">
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">联系电话</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<div class="panel panel-success">
										<div class="panel-heading" ng-bind="customer.phone"></div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">查看客户</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<button class="btn btn-success btn-lg btn-block">查看</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>

			<div role="tabpanel" class="tab-pane fade in" id="myMembers">
				<div class="panel panel-default" ng-repeat="member in memberList">
					<div class="panel-heading" ng-click="member.showDetails = !member.showDetails;">
						<div class="row">
							<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6" ng-bind="member.name"></h3>
							<h3 class="panel-title col-xs-6 col-sm-6 col-md-6 col-lg-6">点击查看/隐藏详情</h3>
						</div>
					</div>
					<div class="panel-body" ng-show="customer.showDetails">
						<form class="form-horizontal">
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">联系电话</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<div class="panel panel-success">
										<div class="panel-heading" ng-bind="member.phone"></div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">查看客户</lable>
								<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
									<button class="btn btn-success btn-lg btn-block">查看</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>