<div class="container">
	<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
		<div class="panel panel-default" style="margin-top: 100px;">
			<div class="panel-body" cg-busy="myPromise">
				<form name='customerForm' role="form" class="form-horizontal" ng-submit="onApply()">
					<div class="form-group">
						<h2 style="text-align: center;">贷款申请</h2>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">贷款金额</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="amount" placeholder="金额" title="请输入贷款金额" required="" maxlength="20" ng-model="customerData.amount" ng-pattern="/^\d+$/" />
							<div ng-show="customerForm.amount.$dirty &amp;&amp; customerForm.amount.$invalid">
								<small class="alert-danger well-sm" ng-show="customerForm.amount.$error.pattern">请使用数字</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">联系电话</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="phone" placeholder="电话" title="请输入联系电话" required="" maxlength="11" ng-model="customerData.phone" ng-minlength="11" ng-pattern="/^\d+$/" />
							<div ng-show="customerForm.phone.$dirty &amp;&amp; customerForm.phone.$invalid">
								<small class="alert-danger well-sm" ng-show="customerForm.phone.$error.pattern">请使用数字</small>
								<small class="alert-danger well-sm" ng-show="customerForm.phone.$error.minlength &amp;&amp; !customerForm.phone.$error.pattern">请输入11位手机号码</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<lable class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">客户姓名</lable>
						<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
							<input type="text" class="form-control" name="name" placeholder="姓名" title="请输入姓名" required="" maxlength="10" ng-model="customerData.name" ng-pattern="/[\u4e00-\u9fa5]+$/" />
							<div ng-show="customerForm.name.$dirty &amp;&amp; customerForm.name.$invalid">
								<small class="alert-danger well-sm" ng-show="customerForm.name.$error.pattern">请使用中文</small>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-10 col-xs-offset-4 col-sm-10 col-sm-offset-4 col-md-10 col-md-offset-4 col-lg-10 col-lg-offset-4">
							<div class="radio-inline">
								<label>
									<input type="radio" name="optionsRadios" id="optionsRadios1" value="male" ng-model="customerData.sex" /> 先生
								</label>
							</div>
							<div class="radio-inline">
								<label>
									<input type="radio" name="optionsRadios" id="optionsRadios2" value="female" ng-model="customerData.sex" /> 女士
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<br/>
						<div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
							<button class="btn btn-success btn-lg btn-block" type="submit">确定</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
